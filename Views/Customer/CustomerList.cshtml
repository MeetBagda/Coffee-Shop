@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Customer List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>CustomerID</th>
            <th>CustomerName</th>
            <th>HomeAddress</th>
            <th>Email</th>
            <th>MobileNo</th>
            <th>GSTNo</th>
            <th>CityName</th>
            <th>PinCode</th>
            <th>NetAmount</th>
            <th>UserID</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["CustomerID"]</td>
                <td>@row["CustomerName"]</td>
                <td>@row["HomeAddress"]</td>
                <td>@row["Email"]</td>
                <td>@row["MobileNo"]</td>
                <td>@row["GSTNo"]</td>
                <td>@row["CityName"]</td>
                <td>@row["PinCode"]</td>
                <td>@row["NetAmount"]</td>
                <td>@row["UserID"]</td>
                <td>
                    <a href="@Url.Action("Edit", "Customer", new { id = row["CustomerID"] })"
                        class="btn btn-sm btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Customer", new { id = row["CustomerID"] })"
                        class="btn btn-sm btn-danger"
                        onclick="return confirm('Are you sure you want to delete this bill?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
