@model DataTable
@using System.Data

@{
    ViewData["Title"] = "Bill List";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>BillID</th>
            <th>BillNumber</th>
            <th>BillDate</th>
            <th>OrderID</th>
            <th>TotalAmount</th>
            <th>Discount</th>
            <th>NetAmount</th>
            <th>CustomerID</th>
            <th>UserID</th>
            <th>Action</th> <!-- Added Action column -->
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["BillID"]</td>
                <td>@row["BillNumber"]</td>
                <td>@row["BillDate"]</td>
                <td>@row["OrderID"]</td>
                <td>@row["TotalAmount"]</td>
                <td>@row["Discount"]</td>
                <td>@row["NetAmount"]</td>
                <td>@row["CustomerID"]</td>
                <td>@row["UserID"]</td>
                <td>
                    <a href="@Url.Action("Edit", "Bill", new { id = row["BillID"] })" class="btn btn-sm btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Bill", new { id = row["BillID"] })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this bill?');">Delete</a>
                </td> <!-- Action buttons -->
            </tr>
        }
    </tbody>
</table>
